{% extends "ArthurHoaroRssCruncherClientBundle::layout.html.twig" %}
{% form_theme form '@ArthurHoaroRssCruncherClient/fields.html.twig' %}

{% block body %}

  <div class="row">
    {{ form_start(
        form,{'method': 'post', 'action': path('arthur_hoaro_rss_cruncher_client_create'), 'attr':
        {'class': 'fos_user_registration_register col-md-offset-3 col-md-6 col-xs-12'}}
      )
    }}
    <div class="form-group {% if form_errors(form.name) %}has-error{% endif %}">
      {{ form_label(form.name, null, { 'label_attr': {'class': 'control-label'} }) }}
      {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>


    <div class="form-group {% if form_errors(form.redirectUri) %}has-error{% endif %}">
      {{ form_label(form.redirectUri, null, { 'label_attr': {'class': 'control-label'} }) }}
      {{ form_widget(form.redirectUri, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group {% if form_errors(form.allowedGrantType) %}has-error{% endif %}">
      {{ form_label(form.allowedGrantType, null, { 'label_attr': {'class': 'control-label'} }) }}
      {{ form_widget(form.allowedGrantType) }}
    </div>

    {{ form_end(form) }}
  </div>
{% endblock %}