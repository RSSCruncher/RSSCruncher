{% extends '::base.html.twig' %}

{% block body -%}
<h1>Client</h1>

<table class="record_properties">
  <tbody>
  <tr>
    <th>Id</th>
    <td>{{ entity.id }}</td>
  </tr>
  <tr>
    <th>Name</th>
    <td>{{ entity.name }}</td>
  </tr>
  <tr>
    <th>Redirect URIs</th>
    <td>
      {% for item in entity.redirectUris %}
        {{ item }}<br>
      {% endfor %}
    </td>
  </tr>
  </tbody>
</table>

<ul class="record_actions">
  <li>
    <a href="{{ path('arthur_hoaro_rss_cruncher_client_index') }}">
      Back to the list
    </a>
  </li>
  <li>
    <a href="{{ path('arthur_hoaro_rss_cruncher_client_edit', { 'id': entity.id }) }}">
      Edit
    </a>
  </li>
  <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
